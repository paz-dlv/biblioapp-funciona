<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="8dp"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgAdminProduct"
            android:layout_width="84dp"
            android:layout_height="112dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="12dp" />

        <!-- Contenido: título, autor, price, stock -->
        <LinearLayout
            android:id="@+id/llAdminContent"
            android:layout_toEndOf="@id/imgAdminProduct"
            android:layout_toRightOf="@id/imgAdminProduct"
            android:layout_alignTop="@id/imgAdminProduct"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="120dp">

            <TextView
                android:id="@+id/tvAdminTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título producto"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvAdminAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Autor"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvAdminGenre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Género"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvAdminDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción breve..."
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvAdminPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvAdminStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock: 0"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Panel de acciones (editar / eliminar / activar) en la esquina superior derecha -->
        <LinearLayout
            android:id="@+id/llAdminActions"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnAdminEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="?attr/colorPrimary" />

            <ImageButton
                android:id="@+id/btnAdminDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="@android:color/holo_red_dark" />

            <Switch
                android:id="@+id/switchAdminActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Activo"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Botón pequeño para acciones rápidas (opcional) -->
        <Button
            android:id="@+id/btnAdminMore"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/llAdminActions"
            android:layout_marginTop="8dp"
            android:text="Más"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>