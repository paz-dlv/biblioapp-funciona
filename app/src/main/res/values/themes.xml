<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme con Material3 DayNight -->
    <style name="Base.Theme.Biblioapp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary / surface / background -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>


        <item name="colorOnBackground">@color/textPrimary</item>

        <item name="colorSurface">@color/cardColor</item>
        <item name="colorOnSurface">@color/textPrimary</item>

        <!-- Status bar / navigation bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/md_theme_primary</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/md_theme_background</item>

        <!-- Fondo de ventana (útil para splash / transiciones) -->
        <item name="android:windowBackground">@color/md_theme_background</item>
    </style>

    <!-- Tema público que usa la base -->
    <style name="Theme.Biblioapp" parent="Base.Theme.Biblioapp" />
</resources>